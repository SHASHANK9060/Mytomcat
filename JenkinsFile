pipeline {
    agent any

    tools {
        maven 'Maven_3.8.7'
        jdk 'JDK_17'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SHASHANK9060/Mytomcat.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Setup Tomcat') {
            steps {
                // Make sure setup-tomcat.sh exists and is executable
                sh 'chmod +x setup-tomcat.sh && ./setup-tomcat.sh'
            }
        }

        stage('Deploy WAR') {
            steps {
                // Replace with your actual remote details
                sh 'scp target/my-webapp.war user@your-server:/path/to/tomcat/webapps/'
            }
        }
    }
}
